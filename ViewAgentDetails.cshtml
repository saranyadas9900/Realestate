@model List<WebApplication4.Models.AgentViewModel>

<h2>Agent Details</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agent in Model)
        {
            <tr>
                <td>@agent.AgentID</td>
                <td>@agent.Username</td>
                <td>@agent.Name</td>
                <td>@agent.PhoneNumber</td>
                <td>@agent.Email</td>
                <td>
                    @Html.ActionLink("Edit", "EditAgent", new { id = agent.AgentID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteAgent", new { id = agent.AgentID }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this agent?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
